{
  "manifest_version": 2,
  "name": "CENO Router",
  "description": "Facilitates interaction with the CENO Client, your gateway to the CENO network.",
  "default_locale": "en",
  "version": "1.0.0",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_title": "CENO Intercept",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "proxy",
    "https://*/*",
    "http://*/*"
  ]
}
